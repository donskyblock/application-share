# Server Configuration
PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# Admin User (set these for automatic admin creation)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-here

# Database (if needed later)
# DATABASE_URL=postgresql://user:password@localhost:5432/appshare

# X11/VNC Configuration
DISPLAY=:99
VNC_PORT=5900
VNC_PASSWORD=your-vnc-password
ENABLE_VNC=false

# RDP Configuration
RDP_PORT=3389
RDP_PASSWORD=your-rdp-password
ENABLE_RDP=false

# Live Streaming Configuration
STREAM_PORT=8765
STREAM_FRAME_RATE=30
STREAM_QUALITY=80

# Security
MAX_CONCURRENT_APPS=10
ALLOWED_APPLICATIONS=firefox,code,cursor,gedit,libreoffice

# File System
TEMP_DIR=/tmp/appshare
USER_HOME_DIR=/home

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
